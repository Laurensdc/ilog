echo -e '\e[33m# Pulling latest version'
echo -e '\e[39m'
git pull origin main

echo -e '\e[32mSuccess!'
echo -e '\e[39m'

echo -e '\e[33m# Installing npm modules'
echo -e '\e[39m'
cd server && npm install && cd ../
echo -e '\e[32mSuccess!'
echo -e '\e[39m'


echo -e '\e[33m# Building Elm'
echo -e '\e[32m'
Elm make src/Main.elm --optimize --output server/public/main.js

echo -e '\e[32mSuccess!'
echo -e '\e[39m'

echo -e '\e[33m# Running application'
echo -e '\e[39m]'
cd server && npm run prod
